# Environment Configuration
NODE_ENV=development
PORT=3000

# Database
MONGODB_URI=mongodb://localhost:27017/spider-league

# JWT Configuration
JWT_SECRET=spider-league-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# API Keys (for future use)
GOOGLE_VISION_API_KEY=your-google-vision-api-key-here
